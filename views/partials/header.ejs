        <script>
            function gotoDetail(productId){
                window.location.href=`http://localhost:5001/products/product-detail/${productId}/mainimage`
            }
        </script>
</head>

<body>

    <header class="main_nav">
        <div class="top_bar">
            <p style="margin: 0;">Summer Sale For All Gadget And Free Express Delivery - OFF 50%!</p>
        </div>
        <div class="nav_bar">
            <div class="all_items">
                <div class="logo_section">
                    <a href="/">

                        <img src="/images/Logo.svg" alt="">
                    </a>
                </div>
                <div class="links">
                    <a href="/">Home</a>
                    <a href="">Contact</a>
                    <a href="">About</a>
                    <%if(profile){%>
                        <a href="/users/product/orders/trackorders/<%-id%>">Orders</a>
                        <%}else{%>
                            <a href="/user/login">Login</a>
                        <%}%>
                </div>
                <div class="icons">
                    <div style="display: flex;align-items: center;justify-content: center;padding:5px 7px;background: #f5f5f5f5;font-size: 12px;cursor: pointer;" class="sorting">
                        sort
                      <img src="/images/sort.svg" style="width: 15px;height: 18px;" alt="">
                    </div>
                    <div style="display: flex;align-items: center;justify-content: center;padding:5px 7px;background: #f5f5f5f5;font-size: 12px;cursor: pointer;" id="filterbtn">
                        filter
                        <img src="/images/filter.svg" style="height: 15px;width: 15px;" alt="">
                    </div>
                    <form class="search_box"  id="searchboxforproduct">
                        <input type="search" placeholder="search product" name="searchdata" oninput="searchProductInHome(event,'<%-profile%>')">
                        <input type="submit" value="" id="btn" style="display: none;">
                        <label for="btn" style="margin: 0;padding: 0;height: auto;">
                            <img src="/images/search.svg" alt="">
                        </label>
                    </form>
                    <%if(profile){%>
                        <a href=""  class="crt whish">
                            <img class="whish" src="/images/heart.svg" alt="">
                            <span id="cartCnt">10</span>
                        </a>
                        <a href="/users/product/cart/showcart/<%-id%>" class="crt">
                            <img class="cart" src="/images/cart.svg" alt="">
                            <span id="cartCnt"><%-cartCount%></span>
                        </a>
                        <% }else{%>
                            <a href="/user/login">
                                <img class="whish" src="/images/heart.svg" alt="">
                            </a>
                            <a href="/user/login">
                                <img class="cart" src="/images/cart.svg" alt="">
                            </a>
                            <% }%>
                            <%if(profile){%>
                                <a id="profile_btn" style="cursor: pointer;">
                                    <img src="/images/userprofile.svg" alt="">
                                </a>
                                <% } %>
                                <img class="menu" src="/images/menu_bar.svg" alt="">
                </div>
            </div>
        </div>
    </header>