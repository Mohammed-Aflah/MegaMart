                            <div class="price">
                                <p class="discounted">
                                    <%if(data && data.offer && data.offer.offerprice){%>
                                        ₹<%-data.price-(data.price*data.offer.offerprice)/100%>
                                    <%}else if(data.discount){%>
                                            ₹<%-data.discount%>
                                            <%}else{%>
                                        ₹<%-data.price%>
                                    <%}%>
                                </p>
                                <p class="mrp">
                                    <%if(data.discount){%>
                                        <%-data.price%>₹
                                   <% }%>
                                </p>
                            </div>
                            <div class="star_rating">
                                <img src="/images/star.svg" alt="">
                                <img src="/images/star.svg" alt="">
                                <img src="/images/star.svg" alt="">
                                <img src="/images/star.svg" alt="">
                                <img src="/images/star.svg" alt="">
